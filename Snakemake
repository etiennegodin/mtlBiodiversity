#Snakefile
configfile: "config.yaml"

rule all:
	input:
		"data/processed/metrics.parquet",

rule clean_geospatial:
	input:
		expand("{geospatial_dir}/{sample}.shp", 
					geospatial_dir=config["geospatial_dir"],
					sample=config["geospatial_files"])

	output:
		expand("{raw_dir}/geospatial/{sample}_inter.shp", 
					geospatial_dir=config["geospatial_dir"],
					sample=config["geospatial_files"])
	script:
		"scripts/clean_geospatial.py"
